@model IEnumerable<PropertyModel>

<style>
    body {
        background-color: #f97743;
        background-image: url(https://c.wallhere.com/photos/45/22/room_living_room_furniture_white_interior-635269.jpg!d);
    }

    .advanced {
        text-decoration: none;
        font-size: 15px;
        font-weight: 500
    }

    #typeValue,
    #typeValue:focus,
    #typeValue:active {
        color: #fff;
        background-color: #00838f !important;
        border-color: #00838f !important;
        box-shadow: none
    }

    .advanced {
        color: #00838f !important
    }

    .form-control:focus {
        box-shadow: none;
        border: 1px solid #00838f
    }


    .carousel-cell {
        width: 77%;
        margin: 0,0,0,0;
        background: #8C8;
        border-radius: 5px;
    }

        /* cell number */
        .carousel-cell:before {
            display: block;
            text-align: center;
            line-height: 200px;
            font-size: 80px;
            color: white;
        }

    .main-carousel {
        width: 600px;
        margin:0 ,0,0,0;
    }
</style>

<div class="main-carousel" data-flickity='{ "cellAlign": "left", "contain": true ,"autoPlay": true }'>
    @foreach (var item in Model)
    {
        <div class="carousel-cell">
            <img src="@item.CoverImageUrl" width="600" height="400">
        </div>
    }
    <div class="carousel-cell">
        <img src="~/images/43.jpg" width="600" height="400">
    </div>
