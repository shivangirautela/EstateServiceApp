<form method="post" asp-action="Index" id="formnew">

    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10">
                <div class="card p-3 py-4">
                    <h5>An Easier way to find your Housing</h5>
                    <div class="row g-3 mt-2">
                        <div class="col-md-3">
                            <div class="dropdown">
                                <select class="form-control" name="typeValue" id="typeValue" asp-items="Html.GetEnumSelectList<PropertyStatusEnum>()">
                                    <option selected value="">Property Status</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <input type="search" class="form-control" name="address" value="@ViewData["address"]" placeholder="Enter address e.g. street, city and state or zip" />
                        </div>
                        <div class="col-md-3">
                            <input type="submit" class="btn btn-secondary btn-block" value="Search Results " />
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <a data-toggle="collapse" href="#collapseExample" style="background-color:white;padding:20px 20px;" role="button" aria-expanded="false" aria-controls="collapseExample" class="advanced"> Advance Search With Filters <i class="fa fa-angle-down"></i> </a>
                    <br />

                    <div class="collapse" id="collapseExample">
                        <div class="card card-body">
                            <div class="row">
                                <div class="col-md-4"> <input type="search" name="search" value="@ViewData["id"]" placeholder="Property ID" class="form-control"> </div>
                                <div class="col-md-4"> <input type="search" class="form-control" name="minBudget" value="@ViewData["min"]" placeholder="Enter Min Budget"> </div>
                                <div class="col-md-4"> <input type="search" class="form-control" name="maxBudget" value="@ViewData["max"]" placeholder="Enter Max Budget"> </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@if (@ViewData["id"] != null || @ViewData["type"] != null || @ViewData["address"] != null || @ViewData["max"] != null || @ViewData["min"] != null)
{
    @await Component.InvokeAsync("FeaturedProperties", new { id = @ViewData["id"], type = @ViewData["type"], address = @ViewData["address"], minBudget = @ViewData["min"], maxBudget = @ViewData["max"] })
}

